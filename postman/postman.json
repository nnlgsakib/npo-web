{
  "info": {
    "name": "NPO API (Local)",
    "_postman_id": "f4c5db66-24b2-4b8e-9b3a-8f1c1b7ad1aa",
    "description": "Single-file Postman collection for the NPO backend (posts + transactions).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "adminKey", "value": "changeme-admin-key" }
  ],
  "item": [
    {
      "name": "Health",
      "request": { "method": "GET", "header": [], "url": "{{baseUrl}}/health" }
    },
    {
      "name": "Posts",
      "item": [
        {
          "name": "Create Post (JSON with imageUrl)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "x-admin-key", "value": "{{adminKey}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Welcome\",\n  \"subTitle\": \"Intro\",\n  \"description\": \"Full description of the post...\",\n  \"imageUrl\": \"https://example.com/image.jpg\"\n}"
            },
            "url": "{{baseUrl}}/api/create-post"
          }
        },
        {
          "name": "Create Post (multipart with file)",
          "request": {
            "method": "POST",
            "header": [{ "key": "x-admin-key", "value": "{{adminKey}}" }],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "title", "value": "Welcome", "type": "text" },
                { "key": "subTitle", "value": "Intro", "type": "text" },
                { "key": "description", "value": "Full description...", "type": "text" },
                { "key": "image", "type": "file", "src": "" }
              ]
            },
            "url": "{{baseUrl}}/api/create-post"
          }
        },
        {
          "name": "Edit Post (JSON)",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "x-admin-key", "value": "{{adminKey}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": \"1\",\n  \"title\": \"Updated Title\",\n  \"description\": \"Updated description\"\n}"
            },
            "url": "{{baseUrl}}/api/edit-post_by_id"
          }
        },
        {
          "name": "Edit Post (multipart with file)",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "x-admin-key", "value": "{{adminKey}}" }],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "id", "value": "1", "type": "text" },
                { "key": "title", "value": "Updated Title", "type": "text" },
                { "key": "image", "type": "file", "src": "" }
              ]
            },
            "url": "{{baseUrl}}/api/edit-post_by_id"
          }
        },
        {
          "name": "Delete Post (query)",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "x-admin-key", "value": "{{adminKey}}" }],
            "url": "{{baseUrl}}/api/delete-post_by_id?id=1"
          }
        },
        {
          "name": "Delete Post (JSON body)",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "x-admin-key", "value": "{{adminKey}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"id\": \"1\"\n}" },
            "url": "{{baseUrl}}/api/delete-post_by_id"
          }
        },
        {
          "name": "Get All Posts (summary)",
          "request": { "method": "GET", "header": [], "url": "{{baseUrl}}/api/get_all_posts" }
        },
        {
          "name": "Get Post Full By ID",
          "request": { "method": "GET", "header": [], "url": "{{baseUrl}}/api/get_post_full_by_id?id=1" }
        }
      ]
    },
    {
      "name": "Transactions",
      "item": [
        {
          "name": "Record Txn (public)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Alice Donor\",\n  \"number\": \"01700000000\",\n  \"txnId\": \"BKASH123456\",\n  \"amount\": \"500\"\n}"
            },
            "url": "{{baseUrl}}/api/rec_txn"
          }
        },
        {
          "name": "Get Txn Details (filter)",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/get_txn_details?name=Alice%20Donor&number=01700000000&txnId=BKASH123456"
          }
        },
        {
          "name": "Get Full Txn Record (paginated)",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/get_full_txn_record?page=1&pageSize=20"
          }
        }
      ]
    }
  ]
}
